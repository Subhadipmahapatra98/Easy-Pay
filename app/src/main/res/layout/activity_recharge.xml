<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/clp_mall_header_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="245dp"
        android:layout_height="127dp"
        android:layout_marginTop="-120dp"
        app:srcCompat="@drawable/easypay" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recharge"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/white"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="53dp"
            android:layout_marginTop="30dp"
            android:text="+91"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/Mobnum"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:maxLength="10"
            android:layout_marginTop="30dp"
            android:inputType="phone|number"
            android:hint="9876543678"
            android:textColor="@color/white"
            android:textColorHint="@color/colorView"
            android:textSize="24dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Choose Amount ?"

        android:textColor="@color/colorAccent"
        android:textSize="27sp" />
    <RadioGroup
        android:id="@+id/option1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_marginBottom="9dp">

        <RadioButton
            android:id="@+id/rec199"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="199"
            android:textColor="@color/white"
            android:textSize="21dp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rec599"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="21dp"
            android:textStyle="bold"
            android:text="599" />

        <RadioButton
            android:id="@+id/rec899"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="21dp"
            android:textStyle="bold"
            android:text="899" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Choose Your Operator?"
        android:textColor="@color/colorAccent"
        android:textColorHighlight="@android:color/holo_red_light"
        android:textSize="27sp" />


    <RadioGroup
        android:id="@+id/option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:orientation="horizontal"
        android:padding="3dp"
        android:layout_marginBottom="9dp">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jio"

            android:textColor="@color/white"
            android:textSize="21dp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/Airtel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="21dp"
            android:textStyle="bold"
            android:text="Airtel" />

        <RadioButton
            android:id="@+id/vodaphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="21dp"
            android:textStyle="bold"
            android:text="Vodafone" />

        <RadioButton
            android:id="@+id/BSNL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="21dp"
            android:textStyle="bold"
            android:text="BSNL" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/recharge"
            android:layout_width="150dp"
            android:layout_height="63dp"
            android:layout_gravity="center"
            android:layout_marginLeft="112dp"
            android:backgroundTint="@color/colorAccent"
            android:text="Recharge"
            android:textSize="20dp" />
    </LinearLayout>


</LinearLayout>